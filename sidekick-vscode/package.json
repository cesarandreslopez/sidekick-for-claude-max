{
  "name": "sidekick-for-max",
  "displayName": "Sidekick for Max",
  "description": "AI-powered code completions, transforms, commit messages, RSVP speed reading, and Claude Code session monitoring - all using your Claude Max subscription at no extra cost.",
  "version": "0.7.2",
  "publisher": "CesarAndresLopez",
  "author": {
    "name": "Cesar Andres Lopez",
    "email": "cesarandreslopez@gmail.com"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cesarandreslopez/sidekick-for-claude-max"
  },
  "homepage": "https://github.com/cesarandreslopez/sidekick-for-claude-max#readme",
  "bugs": {
    "url": "https://github.com/cesarandreslopez/sidekick-for-claude-max/issues"
  },
  "keywords": [
    "ai",
    "claude",
    "copilot",
    "completion",
    "anthropic",
    "code-completion",
    "inline-completion",
    "autocomplete",
    "claude-max",
    "ai-assistant",
    "code-transform",
    "rsvp",
    "speed-reading",
    "session-monitor",
    "token-usage",
    "claude-code",
    "analytics"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Sidekick for Max",
      "properties": {
        "sidekick.authMode": {
          "type": "string",
          "enum": ["api-key", "max-subscription"],
          "default": "max-subscription",
          "description": "Authentication mode for Claude API",
          "enumDescriptions": [
            "Use an Anthropic API key (requires ANTHROPIC_API_KEY env var or configured key)",
            "Use Claude Max subscription (requires Claude Code CLI installed and authenticated)"
          ]
        },
        "sidekick.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable inline completions"
        },
        "sidekick.debounceMs": {
          "type": "number",
          "default": 1000,
          "description": "Debounce delay in milliseconds before requesting completion"
        },
        "sidekick.inlineTimeout": {
          "type": "number",
          "default": 15000,
          "minimum": 5000,
          "maximum": 120000,
          "description": "Timeout in milliseconds for inline completions. Increase if you frequently get timeouts (default: 15000ms = 15s)"
        },
        "sidekick.inlineContextLines": {
          "type": "number",
          "default": 30,
          "description": "Lines of context before/after cursor for inline completions"
        },
        "sidekick.transformContextLines": {
          "type": "number",
          "default": 50,
          "description": "Lines of context before/after selection for transforms"
        },
        "sidekick.multiline": {
          "type": "boolean",
          "default": false,
          "description": "Enable multi-line completions (up to 10 lines). When disabled, completions are limited to 1-3 lines. Note: Prose files (Markdown, plaintext, etc.) always use multiline mode."
        },
        "sidekick.inlineModel": {
          "type": "string",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "default": "haiku",
          "description": "Model for inline completions (haiku=fast, sonnet=balanced, opus=quality)",
          "enumDescriptions": [
            "Claude Haiku - Fastest completions (recommended for inline)",
            "Claude Sonnet - Balanced speed and quality",
            "Claude Opus - Highest quality, slower"
          ]
        },
        "sidekick.transformModel": {
          "type": "string",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "default": "opus",
          "description": "Model for code transformations (opus=highest quality, sonnet=balanced, haiku=fast)",
          "enumDescriptions": [
            "Claude Haiku - Fastest, lower quality",
            "Claude Sonnet - Balanced speed and quality",
            "Claude Opus - Highest quality (recommended for transforms)"
          ]
        },
        "sidekick.commitMessageModel": {
          "type": "string",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "default": "sonnet",
          "description": "Model for commit message generation (haiku=fast, sonnet=balanced, opus=quality)",
          "enumDescriptions": [
            "Claude Haiku - Fastest, lower quality",
            "Claude Sonnet - Balanced speed and quality (recommended)",
            "Claude Opus - Highest quality, slower"
          ]
        },
        "sidekick.docModel": {
          "type": "string",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "default": "haiku",
          "description": "Model for documentation generation (haiku=fast, sonnet=balanced, opus=quality)",
          "enumDescriptions": [
            "Claude Haiku - Fastest (recommended for documentation)",
            "Claude Sonnet - Balanced speed and quality",
            "Claude Opus - Highest quality, slower"
          ]
        },
        "sidekick.explainModel": {
          "type": "string",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "default": "sonnet",
          "description": "Model for code explanations (sonnet=recommended for quality)",
          "enumDescriptions": [
            "Claude Haiku - Fastest, lower quality",
            "Claude Sonnet - Balanced speed and quality (recommended)",
            "Claude Opus - Highest quality, slower"
          ]
        },
        "sidekick.errorModel": {
          "type": "string",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "default": "sonnet",
          "description": "Model for error explanations and fixes (sonnet=recommended for accuracy)",
          "enumDescriptions": [
            "Claude Haiku - Fastest, lower quality",
            "Claude Sonnet - Balanced speed and quality (recommended)",
            "Claude Opus - Highest quality, slower"
          ]
        },
        "sidekick.inlineChatModel": {
          "type": "string",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "default": "sonnet",
          "description": "Model for inline chat / quick ask (sonnet=recommended for balance)",
          "enumDescriptions": [
            "Claude Haiku - Fastest, lower quality",
            "Claude Sonnet - Balanced speed and quality (recommended)",
            "Claude Opus - Highest quality, slower"
          ]
        },
        "sidekick.reviewModel": {
          "type": "string",
          "enum": ["haiku", "sonnet", "opus"],
          "default": "sonnet",
          "description": "Model for pre-commit code review (sonnet=recommended for thoroughness)",
          "enumDescriptions": [
            "Claude Haiku - Fastest, lower quality",
            "Claude Sonnet - Balanced speed and quality (recommended)",
            "Claude Opus - Highest quality, slower"
          ]
        },
        "sidekick.prDescriptionModel": {
          "type": "string",
          "enum": ["haiku", "sonnet", "opus"],
          "default": "sonnet",
          "description": "Model for PR description generation (sonnet=recommended for quality)",
          "enumDescriptions": [
            "Claude Haiku - Fastest, lower quality",
            "Claude Sonnet - Balanced speed and quality (recommended)",
            "Claude Opus - Highest quality, slower"
          ]
        },
        "sidekick.commitMessageGuidance": {
          "type": "string",
          "default": "",
          "description": "Default guidance for commit message generation. Applied to all commits (e.g., 'keep it short', 'always mention ticket numbers', 'use past tense')"
        },
        "sidekick.claudePath": {
          "type": "string",
          "default": "",
          "description": "Custom path to the Claude CLI executable. Leave empty to auto-detect. Useful when claude is installed via pnpm or in a non-standard location."
        },
        "sidekick.showCommitButton": {
          "type": "boolean",
          "default": true,
          "description": "Show AI commit message button in Source Control toolbar"
        },
        "sidekick.commitMessageStyle": {
          "type": "string",
          "enum": ["conventional", "simple"],
          "default": "conventional",
          "markdownEnumDescriptions": [
            "**Conventional Commits** - Structured format: `type(scope): description` (e.g., `feat(auth): add OAuth2 support`)",
            "**Simple Description** - Plain imperative description (e.g., `Add OAuth2 authentication support`)"
          ],
          "description": "Format style for AI-generated commit messages"
        },
        "sidekick.rsvpMode": {
          "type": "string",
          "enum": ["direct", "explain-first"],
          "default": "direct",
          "description": "RSVP reading mode",
          "enumDescriptions": [
            "Direct Read - Start RSVP immediately",
            "Explain-First - Show AI explanation before reading"
          ]
        },
        "sidekick.explanationComplexity": {
          "type": "string",
          "enum": ["eli5", "curious-amateur", "imposter-syndrome", "senior", "phd"],
          "default": "imposter-syndrome",
          "description": "Explanation complexity level for Explain-First mode",
          "enumDescriptions": [
            "ELI5 - Explain for complete beginners",
            "Curious Amateur - Explain for someone learning",
            "Imposter Syndrome - Fill knowledge gaps for partial understanding",
            "Senior - Summarize key points for experienced readers",
            "PhD Mode - Expert-level analysis without simplification"
          ]
        },
        "sidekick.explanationModel": {
          "type": "string",
          "enum": ["haiku", "sonnet", "opus"],
          "default": "sonnet",
          "description": "Model for generating explanations (sonnet=recommended)",
          "enumDescriptions": [
            "Claude Haiku - Fastest, lower quality",
            "Claude Sonnet - Balanced speed and quality (recommended)",
            "Claude Opus - Highest quality, slower"
          ]
        },
        "sidekick.showCompletionHint": {
          "type": "boolean",
          "default": true,
          "description": "Show visual hint at cursor suggesting AI completion shortcut after typing stops"
        },
        "sidekick.completionHintDelayMs": {
          "type": "number",
          "default": 1500,
          "description": "Delay in milliseconds after typing stops before showing completion hint"
        },
        "sidekick.enableSessionMonitoring": {
          "type": "boolean",
          "default": true,
          "description": "Enable Claude Code session monitoring for token usage tracking"
        }
      }
    },
    "commands": [
      {
        "command": "sidekick.toggle",
        "title": "Sidekick: Toggle Inline Completions"
      },
      {
        "command": "sidekick.triggerCompletion",
        "title": "Sidekick: Trigger Completion"
      },
      {
        "command": "sidekick.generateDocs",
        "title": "Generate Documentation",
        "icon": "$(book)"
      },
      {
        "command": "sidekick.explainCode",
        "title": "Explain",
        "icon": "$(lightbulb)"
      },
      {
        "command": "sidekick.explainCode.eli5",
        "title": "ELI5"
      },
      {
        "command": "sidekick.explainCode.curiousAmateur",
        "title": "Curious Amateur"
      },
      {
        "command": "sidekick.explainCode.imposterSyndrome",
        "title": "Imposter Syndrome"
      },
      {
        "command": "sidekick.explainCode.senior",
        "title": "Senior"
      },
      {
        "command": "sidekick.explainCode.phd",
        "title": "PhD Mode"
      },
      {
        "command": "sidekick.explainError",
        "title": "Explain Error with AI"
      },
      {
        "command": "sidekick.explainError.eli5",
        "title": "ELI5"
      },
      {
        "command": "sidekick.explainError.curiousAmateur",
        "title": "Curious Amateur"
      },
      {
        "command": "sidekick.explainError.imposterSyndrome",
        "title": "Imposter Syndrome"
      },
      {
        "command": "sidekick.explainError.senior",
        "title": "Senior"
      },
      {
        "command": "sidekick.explainError.phd",
        "title": "PhD Mode"
      },
      {
        "command": "sidekick.fixError",
        "title": "Fix Error with AI"
      },
      {
        "command": "sidekick.inlineChat",
        "title": "Quick Ask",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "sidekick.reviewChanges",
        "title": "Sidekick: Review My Changes",
        "icon": "$(eye)"
      },
      {
        "command": "sidekick.clearReview",
        "title": "Sidekick: Clear AI Review"
      },
      {
        "command": "sidekick.generatePrDescription",
        "title": "Sidekick: Generate PR Description",
        "icon": "$(git-pull-request)"
      },
      {
        "command": "sidekick.transform",
        "title": "Sidekick: Transform Selected Code"
      },
      {
        "command": "sidekick.setApiKey",
        "title": "Sidekick: Set API Key"
      },
      {
        "command": "sidekick.testConnection",
        "title": "Sidekick: Test Connection"
      },
      {
        "command": "sidekick.showLogs",
        "title": "Sidekick: View Logs"
      },
      {
        "command": "sidekick.showMenu",
        "title": "Sidekick: Show Menu"
      },
      {
        "command": "sidekick.generateCommitMessage",
        "title": "Sidekick: Generate Commit Message",
        "icon": "$(sparkle)"
      },
      {
        "command": "sidekick.speedRead",
        "title": "Sidekick: RSVP Reader",
        "icon": "$(book)"
      },
      {
        "command": "sidekick.speedRead.direct",
        "title": "Direct Read"
      },
      {
        "command": "sidekick.speedRead.eli5",
        "title": "Explain: ELI5"
      },
      {
        "command": "sidekick.speedRead.curiousAmateur",
        "title": "Explain: Curious Amateur"
      },
      {
        "command": "sidekick.speedRead.imposterSyndrome",
        "title": "Explain: Imposter Syndrome"
      },
      {
        "command": "sidekick.speedRead.senior",
        "title": "Explain: Senior"
      },
      {
        "command": "sidekick.speedRead.phd",
        "title": "Explain: PhD Mode"
      },
      {
        "command": "sidekick.openDashboard",
        "title": "Sidekick: Open Session Dashboard"
      },
      {
        "command": "sidekick.startMonitoring",
        "title": "Sidekick: Start Session Monitoring",
        "icon": "$(play)"
      },
      {
        "command": "sidekick.stopMonitoring",
        "title": "Sidekick: Stop Session Monitoring",
        "icon": "$(stop)"
      },
      {
        "command": "sidekick.refreshSession",
        "title": "Sidekick: Refresh/Find Session",
        "icon": "$(refresh)"
      },
      {
        "command": "sidekick.sessionDiagnostics",
        "title": "Sidekick: Session Path Diagnostics",
        "icon": "$(info)"
      }
    ],
    "submenus": [
      {
        "id": "sidekick.menu",
        "label": "Sidekick"
      },
      {
        "id": "sidekick.explainSubmenu",
        "label": "Explain Code"
      },
      {
        "id": "sidekick.explainErrorSubmenu",
        "label": "Explain Error with AI"
      },
      {
        "id": "sidekick.speedReadSubmenu",
        "label": "RSVP Reader"
      }
    ],
    "keybindings": [
      {
        "command": "sidekick.triggerCompletion",
        "key": "ctrl+shift+space",
        "mac": "cmd+shift+space",
        "when": "editorTextFocus"
      },
      {
        "command": "sidekick.transform",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "sidekick.generateDocs",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      },
      {
        "command": "sidekick.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "sidekick.speedRead",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "sidekick.inlineChat",
        "key": "ctrl+i",
        "mac": "cmd+i",
        "when": "editorTextFocus && !editorReadonly && !suggestWidgetVisible && !inlineChatFocused"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "sidekick.reviewChanges",
          "group": "navigation",
          "when": "scmProvider == git"
        },
        {
          "command": "sidekick.generatePrDescription",
          "group": "navigation",
          "when": "scmProvider == git"
        },
        {
          "command": "sidekick.generateCommitMessage",
          "group": "navigation",
          "when": "scmProvider == git && config.sidekick.showCommitButton"
        }
      ],
      "editor/context": [
        {
          "submenu": "sidekick.menu",
          "group": "1_sidekick@1",
          "when": "editorTextFocus"
        }
      ],
      "sidekick.menu": [
        {
          "command": "sidekick.inlineChat",
          "group": "0_ask@1",
          "when": "editorTextFocus"
        },
        {
          "command": "sidekick.generateDocs",
          "group": "1_docs@1",
          "when": "editorTextFocus"
        },
        {
          "submenu": "sidekick.explainSubmenu",
          "group": "2_explain@1",
          "when": "editorHasSelection"
        },
        {
          "submenu": "sidekick.explainErrorSubmenu",
          "group": "2_explain@2",
          "when": "editorHasSelection"
        },
        {
          "command": "sidekick.fixError",
          "group": "2_explain@3",
          "when": "editorHasSelection"
        },
        {
          "command": "sidekick.transform",
          "group": "3_transform@1",
          "when": "editorHasSelection"
        },
        {
          "submenu": "sidekick.speedReadSubmenu",
          "group": "4_read@1",
          "when": "editorHasSelection"
        }
      ],
      "sidekick.explainSubmenu": [
        {
          "command": "sidekick.explainCode.eli5",
          "group": "1_levels@1"
        },
        {
          "command": "sidekick.explainCode.curiousAmateur",
          "group": "1_levels@2"
        },
        {
          "command": "sidekick.explainCode.imposterSyndrome",
          "group": "1_levels@3"
        },
        {
          "command": "sidekick.explainCode.senior",
          "group": "1_levels@4"
        },
        {
          "command": "sidekick.explainCode.phd",
          "group": "1_levels@5"
        }
      ],
      "sidekick.explainErrorSubmenu": [
        {
          "command": "sidekick.explainError.eli5",
          "group": "1_levels@1"
        },
        {
          "command": "sidekick.explainError.curiousAmateur",
          "group": "1_levels@2"
        },
        {
          "command": "sidekick.explainError.imposterSyndrome",
          "group": "1_levels@3"
        },
        {
          "command": "sidekick.explainError.senior",
          "group": "1_levels@4"
        },
        {
          "command": "sidekick.explainError.phd",
          "group": "1_levels@5"
        }
      ],
      "sidekick.speedReadSubmenu": [
        {
          "command": "sidekick.speedRead.direct",
          "group": "1_direct"
        },
        {
          "command": "sidekick.speedRead.eli5",
          "group": "2_explain@1"
        },
        {
          "command": "sidekick.speedRead.curiousAmateur",
          "group": "2_explain@2"
        },
        {
          "command": "sidekick.speedRead.imposterSyndrome",
          "group": "2_explain@3"
        },
        {
          "command": "sidekick.speedRead.senior",
          "group": "2_explain@4"
        },
        {
          "command": "sidekick.speedRead.phd",
          "group": "2_explain@5"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sidekick-monitor",
          "title": "Session Monitor",
          "icon": "images/icon.png"
        }
      ]
    },
    "views": {
      "sidekick-monitor": [
        {
          "type": "webview",
          "id": "sidekick.dashboard",
          "name": "Session Analytics"
        },
        {
          "type": "webview",
          "id": "sidekick.mindMap",
          "name": "Mind Map"
        },
        {
          "id": "sidekick.tempFiles",
          "name": "Latest Files Touched"
        },
        {
          "id": "sidekick.subagents",
          "name": "Subagents"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js --production",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.12",
    "@anthropic-ai/sdk": "^0.71.2",
    "marked": "^12.0.0",
    "dompurify": "^3.0.0"
  }
}
