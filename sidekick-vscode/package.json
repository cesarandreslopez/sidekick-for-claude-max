{
  "name": "sidekick-for-max",
  "displayName": "Sidekick for Max",
  "description": "AI-powered code completions, transforms, and commit messages using your Claude Max subscription - no extra cost.",
  "version": "0.4.0",
  "publisher": "CesarAndresLopez",
  "author": {
    "name": "Cesar Andres Lopez",
    "email": "cesarandreslopez@gmail.com"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cesarandreslopez/sidekick-for-claude-max"
  },
  "homepage": "https://github.com/cesarandreslopez/sidekick-for-claude-max#readme",
  "bugs": {
    "url": "https://github.com/cesarandreslopez/sidekick-for-claude-max/issues"
  },
  "keywords": [
    "ai",
    "claude",
    "copilot",
    "completion",
    "anthropic",
    "code-completion",
    "inline-completion",
    "autocomplete",
    "claude-max",
    "ai-assistant",
    "code-transform"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Sidekick for Max",
      "properties": {
        "sidekick.authMode": {
          "type": "string",
          "enum": ["api-key", "max-subscription"],
          "default": "max-subscription",
          "description": "Authentication mode for Claude API",
          "enumDescriptions": [
            "Use an Anthropic API key (requires ANTHROPIC_API_KEY env var or configured key)",
            "Use Claude Max subscription (requires Claude Code CLI installed and authenticated)"
          ]
        },
        "sidekick.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable inline completions"
        },
        "sidekick.debounceMs": {
          "type": "number",
          "default": 1000,
          "description": "Debounce delay in milliseconds before requesting completion"
        },
        "sidekick.inlineContextLines": {
          "type": "number",
          "default": 30,
          "description": "Lines of context before/after cursor for inline completions"
        },
        "sidekick.transformContextLines": {
          "type": "number",
          "default": 50,
          "description": "Lines of context before/after selection for transforms"
        },
        "sidekick.multiline": {
          "type": "boolean",
          "default": false,
          "description": "Enable multi-line completions (up to 10 lines). When disabled, completions are limited to 1-3 lines. Note: Prose files (Markdown, plaintext, etc.) always use multiline mode."
        },
        "sidekick.inlineModel": {
          "type": "string",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "default": "haiku",
          "description": "Model for inline completions (haiku=fast, sonnet=balanced, opus=quality)",
          "enumDescriptions": [
            "Claude Haiku - Fastest completions (recommended for inline)",
            "Claude Sonnet - Balanced speed and quality",
            "Claude Opus - Highest quality, slower"
          ]
        },
        "sidekick.transformModel": {
          "type": "string",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "default": "opus",
          "description": "Model for code transformations (opus=highest quality, sonnet=balanced, haiku=fast)",
          "enumDescriptions": [
            "Claude Haiku - Fastest, lower quality",
            "Claude Sonnet - Balanced speed and quality",
            "Claude Opus - Highest quality (recommended for transforms)"
          ]
        },
        "sidekick.commitMessageModel": {
          "type": "string",
          "enum": [
            "haiku",
            "sonnet",
            "opus"
          ],
          "default": "sonnet",
          "description": "Model for commit message generation (haiku=fast, sonnet=balanced, opus=quality)",
          "enumDescriptions": [
            "Claude Haiku - Fastest, lower quality",
            "Claude Sonnet - Balanced speed and quality (recommended)",
            "Claude Opus - Highest quality, slower"
          ]
        },
        "sidekick.commitMessageGuidance": {
          "type": "string",
          "default": "",
          "description": "Default guidance for commit message generation. Applied to all commits (e.g., 'keep it short', 'always mention ticket numbers', 'use past tense')"
        },
        "sidekick.claudePath": {
          "type": "string",
          "default": "",
          "description": "Custom path to the Claude CLI executable. Leave empty to auto-detect. Useful when claude is installed via pnpm or in a non-standard location."
        },
        "sidekick.showCommitButton": {
          "type": "boolean",
          "default": true,
          "description": "Show AI commit message button in Source Control toolbar"
        },
        "sidekick.commitMessageStyle": {
          "type": "string",
          "enum": ["conventional", "simple"],
          "default": "conventional",
          "markdownEnumDescriptions": [
            "**Conventional Commits** - Structured format: `type(scope): description` (e.g., `feat(auth): add OAuth2 support`)",
            "**Simple Description** - Plain imperative description (e.g., `Add OAuth2 authentication support`)"
          ],
          "description": "Format style for AI-generated commit messages"
        }
      }
    },
    "commands": [
      {
        "command": "sidekick.toggle",
        "title": "Sidekick: Toggle Inline Completions"
      },
      {
        "command": "sidekick.triggerCompletion",
        "title": "Sidekick: Trigger Completion"
      },
      {
        "command": "sidekick.transform",
        "title": "Sidekick: Transform Selected Code"
      },
      {
        "command": "sidekick.setApiKey",
        "title": "Sidekick: Set API Key"
      },
      {
        "command": "sidekick.testConnection",
        "title": "Sidekick: Test Connection"
      },
      {
        "command": "sidekick.showLogs",
        "title": "Sidekick: View Logs"
      },
      {
        "command": "sidekick.showMenu",
        "title": "Sidekick: Show Menu"
      },
      {
        "command": "sidekick.generateCommitMessage",
        "title": "Sidekick: Generate Commit Message",
        "icon": "$(sparkle)"
      }
    ],
    "keybindings": [
      {
        "command": "sidekick.triggerCompletion",
        "key": "ctrl+shift+space",
        "mac": "cmd+shift+space",
        "when": "editorTextFocus"
      },
      {
        "command": "sidekick.transform",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus && editorHasSelection"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "sidekick.generateCommitMessage",
          "group": "navigation",
          "when": "scmProvider == git && config.sidekick.showCommitButton"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.js --production",
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.12",
    "@anthropic-ai/sdk": "^0.71.2"
  }
}
